<h2>Private page</h2>
<p>Welcome {{currentUser.username}}</p>


<form class="recipe-form">
  <label for="title">title</label>
  <input type="text" name="title" id="title">
  <select name="level" id="level">
    <option value="" selected disabled></option>
    <option value="Easy Peasy">Easy Peasy</option>
    <option value="Amateur Chef">Amateur Chef</option>
    <option value="UltraPro Chef">UltraPro Chef</option>
  </select>
  <label for="cuisine">Cuisine</label>
  <input type="text" name="cuisine" id="cuisine">
  <label for="duration">Duration</label>
  <input type="number" name="duration" id="duration">
  <button class="recipe-create" type="submit">Add Recipe to my account</button>
</form>

<section class="recipe-list">
  {{#each recipes}}
    <article>
      <p>{{title}} - {{level}}</p>
      <img src="{{image}}" alt="{{title}}">
      <button id="{{_id}}">Delete</button>
    </article>
  {{/each}}
</section>

<div id='map' style='width: 400px; height: 300px;'></div>


<script src='https://api.mapbox.com/mapbox-gl-js/v1.1.1/mapbox-gl.js'></script>
<link href='https://api.mapbox.com/mapbox-gl-js/v1.1.1/mapbox-gl.css' rel='stylesheet' />
<script src="../javascripts/main.js"></script>
